<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".HomeScreenActivity" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1" >
        
	    <TextView
	        android:id="@+id/homescreentitle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/homescreentitle" />
	    
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1" 
        android:orientation="horizontal" >
	    
	    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:id="@+id/buildtournament"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/createtournament"
                android:onClick="createTournament"
                android:layout_weight="1" />

            <Button
                android:id="@+id/mytournaments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mytournaments"
                android:onClick="viewTournaments"
                android:layout_below="@id/buildtournament"
                android:layout_weight="1"/>
        </RelativeLayout>
		
	</LinearLayout>

</LinearLayout>
