<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1" >





        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/score_text_1"
                    android:layout_height="fill_parent"
                    android:layout_width="wrap_content"
                    android:text="SCORE"
                    android:textSize="40sp"
                    android:textAlignment="center"
                    android:textColor="#CC0000" />
                <Button
                    android:id="@+id/score_increment_1"
                    android:layout_height="fill_parent"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/score_text_1"
                    android:text="+1"
                    android:textSize="40sp"
                    android:textColor="#CC0000"
                    android:background="@android:color/transparent" />
                <Button
                    android:id="@+id/score_decrement_1"
                    android:layout_height="fill_parent"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/score_increment_1"
                    android:text="-1"
                    android:textSize="40sp"
                    android:textColor="#CC0000"
                    android:background="@android:color/transparent" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/shots_text_1"
                    android:layout_height="fill_parent"
                    android:layout_width="wrap_content"
                    android:text="SHOTS"
                    android:textSize="40sp"
                    android:textAlignment="center"
                    android:textColor="#CC0000" />
                <Button
                    android:id="@+id/shots_increment_1"
                    android:layout_height="fill_parent"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/shots_text_1"
                    android:text="+1"
                    android:textSize="40sp"
                    android:textColor="#CC0000"
                    android:background="@android:color/transparent" />
                <Button
                    android:id="@+id/shots_decrement_1"
                    android:layout_height="fill_parent"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/shots_increment_1"
                    android:text="-1"
                    android:textSize="40sp"
                    android:textColor="#CC0000"
                    android:background="@android:color/transparent" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/saves_text_1"
                    android:layout_height="fill_parent"
                    android:layout_width="wrap_content"
                    android:text="SAVES"
                    android:textSize="40sp"
                    android:textAlignment="center"
                    android:textColor="#CC0000" />
                <Button
                    android:id="@+id/saves_increment_1"
                    android:layout_height="fill_parent"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/saves_text_1"
                    android:text="+1"
                    android:textSize="40sp"
                    android:textColor="#CC0000"
                    android:background="@android:color/transparent" />
                <Button
                    android:id="@+id/saves_decrement_1"
                    android:layout_height="fill_parent"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/saves_increment_1"
                    android:text="-1"
                    android:textSize="40sp"
                    android:textColor="#CC0000"
                    android:background="@android:color/transparent" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/score_text_1"
                    android:layout_height="fill_parent"
                    android:layout_width="wrap_content"
                    android:text="SCORE"
                    android:textSize="40dp"
                    android:textAlignment="center"
                    android:textColor="#0099CC" />
                <Button
                    android:id="@+id/score_increment_1"
                    android:layout_height="fill_parent"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/score_text_1"
                    android:text="+1"
                    android:textSize="40dp"
                    android:textColor="#0099CC"
                    android:background="@android:color/transparent" />
                <Button
                    android:id="@+id/score_decrement_1"
                    android:layout_height="fill_parent"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/score_increment_1"
                    android:text="-1"
                    android:textSize="40dp"
                    android:textColor="#0099CC"
                    android:background="@android:color/transparent" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/shots_text_2"
                    android:layout_height="fill_parent"
                    android:layout_width="wrap_content"
                    android:text="SHOTS"
                    android:textSize="40sp"
                    android:textAlignment="center"
                    android:textColor="#0099CC" />
                <Button
                    android:id="@+id/shots_increment_2"
                    android:layout_height="fill_parent"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/shots_text_2"
                    android:text="+1"
                    android:textSize="40sp"
                    android:textColor="#0099CC"
                    android:background="@android:color/transparent" />
                <Button
                    android:id="@+id/shots_decrement_2"
                    android:layout_height="fill_parent"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/shots_increment_2"
                    android:text="-1"
                    android:textSize="40sp"
                    android:textColor="#0099CC"
                    android:background="@android:color/transparent" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/saves_text_2"
                    android:layout_height="fill_parent"
                    android:layout_width="wrap_content"
                    android:text="SAVES"
                    android:textSize="40sp"
                    android:textAlignment="center"
                    android:textColor="#0099CC" />
                <Button
                    android:id="@+id/saves_increment_2"
                    android:layout_height="fill_parent"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/saves_text_2"
                    android:text="+1"
                    android:textSize="40sp"
                    android:textColor="#0099CC"
                    android:background="@android:color/transparent" />
                <Button
                    android:id="@+id/saves_decrement_2"
                    android:layout_height="fill_parent"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/saves_increment_2"
                    android:text="-1"
                    android:textSize="40sp"
                    android:textColor="#0099CC"
                    android:background="@android:color/transparent" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center" >


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:textSize="40sp"
                android:textColor="#669900" />

            <Button
                android:id="@+id/half_1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/timer"
                android:text="1st"
                android:textSize="40sp"
                android:textColor="#669900"
                android:background="@android:color/transparent" />

            <Button
                android:id="@+id/half_2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/half_1"
                android:text="2nd"
                android:textSize="40sp"
                android:background="@android:color/transparent"
                android:textColor="#669900" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/team_1_score"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="00"
                android:textSize="60sp"
                android:textColor="#CC0000" />

            <TextView
                android:id="@+id/team_2_score"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/team_1_score"
                android:text="00"
                android:textSize="60sp"
                android:textColor="#0099CC" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
